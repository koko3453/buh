{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Characters",
  "type": "object",
  "required": ["characters"],
  "properties": {
    "characters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "portrait", "weapon", "rule", "ultimate"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "portrait": {"type": "string"},
          "weapon": {"type": "string"},
          "rule": {"type": "string"},
          "ultimate": {"type": "string"},
          "stats": {
            "type": "object",
            "additionalProperties": {"type": "number"}
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
